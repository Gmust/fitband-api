# Copy this file to terraform.tfvars and fill in your values
# terraform.tfvars is in .gitignore to keep secrets safe

aws_region  = "us-east-1"
environment = "dev"
project_name = "mock-fitband-api"

# EC2 Configuration
ec2_instance_type = "t3.micro"
ec2_volume_size   = 20
allocate_elastic_ip = false

# SSH Configuration
# Generate with: ssh-keygen -t rsa -b 4096 -f ~/.ssh/mock-fitband-api-key
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAACAQ... your-public-key-here"
ssh_allowed_cidrs = ["0.0.0.0/0"] # Restrict to your IP in production: ["YOUR_IP/32"]

# RDS Configuration
create_rds = true
rds_instance_class = "db.t3.micro"
rds_engine_version = "15.4"
rds_allocated_storage = 20
rds_max_allocated_storage = 100
rds_database_name = "mock_fitband_db"
rds_username = "postgres"
rds_password = "CHANGE_THIS_STRONG_PASSWORD" # Use a strong password!
rds_publicly_accessible = true

# Additional RDS access (for migrations from your local machine)
# rds_allowed_cidrs = {
#   "home" = "YOUR_IP/32"
# }

# Backup Configuration
rds_backup_retention_period = 7
rds_backup_window = "03:00-04:00"
rds_maintenance_window = "sun:04:00-sun:05:00"

