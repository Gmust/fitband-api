# Production Environment Variables for Azure VM
# Copy this file to .env.prod and update with your actual values

# Database Configuration
POSTGRES_DB=mock_fitband_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here-change-this

# Application Configuration
NODE_ENV=production
PORT=8080
APP_PORT=8080

# Database Connection URL (used by app)
DATABASE_URL=postgresql://postgres:your-secure-password-here-change-this@db:5432/mock_fitband_db?schema=public

# Security
JWT_SECRET=your-super-secret-jwt-key-here-change-this
API_KEY=your-api-key-here-change-this

# CORS Configuration (comma-separated for multiple origins)
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Logging
LOG_LEVEL=info

# Docker Configuration
RUN_MIGRATIONS=true

# Note: Database port (5432) is NOT exposed externally for security
# The app connects internally via Docker network using the DATABASE_URL above

